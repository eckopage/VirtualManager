@model IEnumerable<VM.DataAccessLayer.EDM.UserDetails>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_CoreAdminLayout.cshtml";
}

<div class="main-content">
    <div class="container">
        <div class="row">
            <div class="area-top clearfix">
                <div class="pull-left header">
                    <h3 class="title">
                        <i class="icon-table"></i>
                        Baza pracowników
                    </h3>
                    <h5>
                        <span>
                            Uzupełnij potrzebne pola a następnie dodaj użytkownika.
                        </span>
                    </h5>
                </div>
            </div>
        </div>
    </div>
    <div class="container padded">
        <div class="row">
            <!-- Breadcrumb line -->
            <div id="breadcrumbs">
                <div class="breadcrumb-button blue">
                    <span class="breadcrumb-label"><i class="icon-home"></i> Strona główna</span>
                    <span class="breadcrumb-arrow"><span></span></span>
                </div>

                <div class="breadcrumb-button">
                    <span class="breadcrumb-label">
                        <i class="icon-beaker"></i> Użytkownik
                    </span>
                    <span class="breadcrumb-arrow"><span></span></span>
                </div>

                <div class="breadcrumb-button">
                    <span class="breadcrumb-label">
                        <i class="icon-table"></i> Lista użytkowników
                    </span>
                    <span class="breadcrumb-arrow"><span></span></span>
                </div>
            </div>
        </div>
    </div>
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <p>
                    <b>
                        <div class="col-sm-6 action-nav-button">
                            <a href="@Url.Action("Create","UserDetails")" title="Users">
                                <i class="icon-user"></i>
                                <span>Dodaj użytkownika</span>
                            </a>
                        </div>
                    </b>
                </p>
            </div>
        </div>
        <br />
        <div class="row">
            <div class="col-md-12">
                <!-- find me in partials/tasks_table -->
                <div class="box">
                    <div class="box-header">
                        <span class="title">Użytkownicy</span>
                        <ul class="box-toolbar">
                            <li><span class="label label-green">Liczba użytkowników: </span></li>
                        </ul>
                    </div>
                    <div class="box-content">
                        <table class="table table-normal">
                            <thead>
                                <tr>
                                    <td></td>
                                    <td>@Html.DisplayNameFor(model => model.AccountTable.Email)</td>
                                    <td>@Html.DisplayNameFor(model => model.UserName)</td>
                                    <td>@Html.DisplayNameFor(model => model.UserSurname)</td>
                                    <td>@Html.DisplayNameFor(model => model.WorkersGroup)</td>
                                    <td>@Html.DisplayNameFor(model => model.Department)</td>
                                    <td style="width: 40px"></td>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model) {
                                    <tr class="status-info">
                                        <td class="icon">
                                            <div class="btn-group">
                                                <button class="btn btn-xs btn-default dropdown-toggle" data-toggle="dropdown"><i class="icon-cog"></i></button>
                                                <ul class="dropdown-menu">
                                                    <li>@Html.ActionLink("Edytuj konto", "Edit", new { id = item.UserId })</li>
                                                    <li>@Html.ActionLink("Detale konta", "Details", new { id = item.UserId })</li>
                                                    <li class="divider"></li>
                                                    <li>@Html.ActionLink("Usuń użytkownika", "Delete", new { id = item.UserId })</li>
                                                </ul>
                                            </div>

                                        </td>
                                        <td>
                                            <a href="#">@Html.DisplayFor(modelItem => item.AccountTable.Email)</a>
                                        </td>
                                        <td>
                                            <a href="#">@Html.DisplayFor(modelItem => item.UserName)</a>
                                        </td>
                                        <td>
                                            <a href="#">@Html.DisplayFor(modelItem => item.UserSurname)</a>
                                        </td>
                                        <td>
                                            <a href="#"> @Html.DisplayFor(modelItem => item.WorkerGroupTable.Name)</a>
                                        </td>
                                        <td>
                                            <a href="#">@Html.DisplayFor(modelItem => item.DepartmentTable.DepartmentName)</a>
                                        </td>
                                        <td>
                                            <i class="icon-refresh"></i>
                                        </td>
                                    </tr>

                                }

                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
